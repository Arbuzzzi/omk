- var pageTitle = 'Стайлгайд';
- var version = '0.3.8';

html(lang='ru')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		//meta(name='viewport', content='width=device-width')
		meta(name='description', content='')
		meta(name='author', content='')
		link(rel='stylesheet', href='css/normalize.css')
		//- link(rel='stylesheet', href='css/bootstrap/bootstrap-grid.css')
		link(rel='stylesheet', href='css/bootstrap/bootstrap.css')
		link(rel='stylesheet', href='jquery-ui-1.12.1.custom/jquery-ui.structure.min.css')
		link(rel='stylesheet', href='jquery-ui-1.12.1.custom/jquery-ui.min.css')
		link(rel='stylesheet', href='slick/slick-theme.css')
		link(rel='stylesheet', href='slick/slick.css')

		link(href='css/style.css?'+version, rel='stylesheet')
		if pageTitle !== undefined
			title=pageTitle+' | ОМК'
		else
			title='ОМК'
	body(style="background-color: #f6f6f6;")
		.container
			include stylegide/_stylegide__colors
			include stylegide/_stylegide__fonts
			include stylegide/_stylegide__indets
			include stylegide/_stylegide__buttons
			include stylegide/_stylegide__progress
			include stylegide/_stylegide__forms
			include stylegide/_stylegide__forms_bootstrap
			include stylegide/_stylegide__text
			include stylegide/_stylegide__tables
			include stylegide/_stylegide__icons

		footer.footer(style="padding: 1000px 0")
			.upp
				.container
					.row
						.col-12
							button#btn-up.button.button-up
								i.icon-arrow-down

			// /.container
			// /.footer
			// jQuery
			script(src='js/libs/jquery.min.js')
			// jQuery-UI
			script(src='jquery-ui-1.12.1.custom/jquery-ui.min.js')
			script(src='jquery-ui-1.12.1.custom/datepicker-ru.js')
			script(src='jquery-ui-1.12.1.custom/datepicker.extension.range.min.js')
			script(src='js/libs/jquery.dotdotdot.js')
			// slick
			script(src='slick/slick.min.js')
			// Bootstrap
			script(src='js/libs/bootstrap/bootstrap.bundle.min.js')
			script(src='js/libs/jquery.actual.min.js')
			// Валидация
			script(src='js/libs/validate/jquery.validate.min.js')
			script(src='js/libs/jquery.maskedinput.min.js')
			// main script
			script(src='js/main/main.js?' + version)
			//if lte IE 9
				link(href='ie9/css/bootstrap-ie9.css', rel='stylesheet')
				link(rel='stylesheet', href='ie9/css/style-ie9.css')
				script(src='ie9/js/bootstrap-ie9.js')




